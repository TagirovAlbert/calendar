<div class="container-alba"><h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :Фамилия %><br />
      <%= f.text_field :last_name, autofocus: true,class: 'form-control input-lg' %>
    </div>
    <div class="form-group">
      <%= f.label :Имя %><br />
      <%= f.text_field :first_name, autofocus: true,class: 'form-control input-lg' %>

    </div>

    <div class="form-group">
    <%= f.label :email %><br />
    <%= f.text_field :email, autofocus: true,class: 'form-control input-lg' %>
    </div>

  <div class="form-group">
    <%= f.label :Пароль %>
    <% if @minimum_password_length %>
    <em>(минимум <%= @minimum_password_length %> символов)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",class: 'form-control input-lg' %>
  </div>

  <div class="field">
    <%= f.label :Повторите_пароль %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",class: 'form-control input-lg' %>
  </div>

  <div class="actions">
    <%= f.submit 'Зарегистрироваться', :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>